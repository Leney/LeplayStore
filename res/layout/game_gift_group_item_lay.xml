<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg_selector"
    android:orientation="vertical" >

    <View
        android:id="@+id/game_gift_group_top_split_line"
        android:layout_width="match_parent"
        android:layout_height="6.6dp"
        android:background="@color/main_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="13.3dp" >

        <!-- icon -->

        <ImageView
            android:id="@+id/game_gift_group_app_icon"
            style="@style/listIconStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- 下载按钮 -->

            <com.xd.leplay.store.view.download.DownloadProgressButton
                android:id="@+id/game_gift_group_download_btn"
                android:layout_width="66.6dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/game_gift_group_download_btn"
                android:layout_toStartOf="@id/game_gift_group_download_btn"
                android:orientation="vertical" >

                <!-- 应用名称 -->

                <TextView
                    android:id="@+id/game_gift_group_app_name"
                    style="@style/listNameStyle"
                    android:text="58同城" />

                <!-- 下载次数和软件大小 -->

                <TextView
                    android:id="@+id/game_gift_group_download_count_and_size"
                    style="@style/listSizeDesStyle"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="1722万次下载|116.44M" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6.6dp"
        android:background="@drawable/expland_list_up_proint" />

</LinearLayout>