<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="13.3dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:layout_marginStart="13.3dp"
        android:src="@drawable/app_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update_notification_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="您有 6 款应用可以更新啦!"
            android:textColor="@color/white"
            android:textSize="14.6dp" />

        <!-- 图标部分 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/update_notification_icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6.6dp"
                android:layout_marginRight="6.6dp"
                android:src="@drawable/default_icon" />

            <ImageView
                android:id="@+id/update_notification_icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6.6dp"
                android:layout_marginRight="6.6dp"
                android:src="@drawable/default_icon" />

            <ImageView
                android:id="@+id/update_notification_icon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6.6dp"
                android:layout_marginRight="6.6dp"
                android:src="@drawable/default_icon" />

            <ImageView
                android:id="@+id/update_notification_icon_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6.6dp"
                android:layout_marginRight="6.6dp"
                android:src="@drawable/update_notification_more_img" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/update_notification_update_all_btn"
        android:layout_width="66.6dp"
        android:layout_height="30dp"
        android:layout_marginEnd="13.3dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:layout_marginStart="13.3dp"
        android:background="@drawable/blue_rec_bg_shape"
        android:singleLine="true"
        android:text="@string/quickly_update"
        android:textColor="@color/indicator_color"
        android:textSize="12sp" />

</LinearLayout>