<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_center_dialog_bg_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp" >

    <ImageView
        android:layout_width="83.3dp"
        android:layout_height="83.3dp"
        android:src="@drawable/upgread_icon" />

    <TextView
        android:id="@+id/force_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.6dp"
        android:text="正在升级新版本,请稍后..."
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <ProgressBar
            android:id="@+id/force_dialog_download_progress"
            style="@style/progressBarLineStyle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="20" />

        <TextView
            android:id="@+id/force_dialog_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="20%"
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- 重试 -->

    <Button
        android:id="@+id/force_dialog_redownload_btn"
        android:layout_width="wrap_content"
        android:layout_height="46.6dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/upgread_btn_bg_selector"
        android:minWidth="166.6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/re_try"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <!-- 安装 -->

    <Button
        android:id="@+id/force_dialog_install_btn"
        android:layout_width="wrap_content"
        android:layout_height="46.6dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/upgread_btn_bg_selector"
        android:minWidth="166.6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/install"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>