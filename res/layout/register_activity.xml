<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="13.3dp"
    android:paddingLeft="13.3dp"
    android:paddingRight="13.3dp"
    android:paddingStart="13.3dp" >

    <!-- 手机号码输入框 -->

    <EditText
        android:id="@+id/register_phone_edit"
        style="@style/loginEditType"
        android:layout_marginTop="34dp"
        android:hint="@string/register_phone_hint"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46.6dp"
        android:layout_marginTop="15dp" >

        <!-- 验证码输入框 -->

        <EditText
            android:id="@+id/register_verification_code_edit"
            style="@style/loginEditType"
            android:layout_weight="2"
            android:hint="@string/register_verification_code_hint"
            android:inputType="number" />

        <!-- 获取验证码按钮 -->

        <Button
            android:id="@+id/register_get_verification_code_btn"
            style="@style/blueBtnType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/invite_code_btn_bg_color"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="@string/register_get_verification_code"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- 登录按钮 -->

    <Button
        android:id="@+id/register_register_btn"
        style="@style/blueBtnType"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn_bg_shape"
        android:text="@string/login" />
