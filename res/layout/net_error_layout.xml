<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 加载失败 -->

    <LinearLayout
        android:id="@+id/net_error_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/net_error_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/load_error" />

        <TextView
            android:id="@+id/net_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/loading_failed"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/net_error_set_net_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/net_error_btn_bg_shape"
            android:gravity="center"
            android:text="@string/set_net"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>