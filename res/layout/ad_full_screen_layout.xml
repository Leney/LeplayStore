<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

    <com.xd.leplay.store.view.AdImageView
        android:id="@+id/full_screen_ad_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/default_rec_icon"/>

    <TextView
        android:id="@+id/full_screen_close_ad_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="#55448844"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="关 闭"
        android:textColor="@color/white"/>

    <com.xd.leplay.store.view.CountDownTextView
        android:id="@+id/full_screen_ad_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/count_down_bg"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:text="60s"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/full_screen_ad_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="#88666666"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="@string/ad"
        android:textColor="@color/white"
        android:textSize="12sp"/>
</FrameLayout>