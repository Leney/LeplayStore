<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/first_in_top_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_dialog_top_bg"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="100"
        android:textColor="@color/dialog_coin_color"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/red_dialog_bottom_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="@string/first_login_get2"
            android:textColor="@color/white"
            android:textSize="21.3dp" />

        <TextView
            android:id="@+id/first_in_content_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="@string/first_login_get3"
            android:textColor="#fff719"
            android:textSize="21.3dp" />

        <!-- 登录领取 -->

        <Button
            android:id="@+id/first_in_login_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/first_login_in_bg_shape"
            android:text="@string/login_get"
            android:textColor="@color/login_get_text_color"
            android:textSize="21.3sp" />
    </LinearLayout>

</LinearLayout>