<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/upgrade_notification_content_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="13.3dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:layout_marginStart="13.3dp"
        android:src="@drawable/app_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/upgrade_notification_content_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="爱玩商店V2.0上线啦!"
                android:textColor="@color/white"
                android:textSize="14.6dp" />

            <TextView
                android:id="@+id/upgrade_notification_content_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2015-08-24"
                android:textColor="@color/tab_text_color"
                android:textSize="10.6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/upgrade_notification_content_discrible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="马上升级,开始尝鲜吧"
            android:textColor="@color/tab_text_color"
            android:textSize="10.6dp" />
    </LinearLayout>

</LinearLayout>