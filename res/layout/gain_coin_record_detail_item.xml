<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/gain_record_item_detail_child_split_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:paddingBottom="5dp"
        android:paddingEnd="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingStart="13dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/gain_record_item_detail_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:text="成功邀请6个好友"
            android:textColor="@color/indicator_normal_text_color"
            android:textSize="14.66sp" />

        <TextView
            android:id="@+id/gain_record_item_detail_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="+ 5"
            android:textColor="@color/redeem_code_text_color"
            android:textSize="14.66sp" />
    </LinearLayout>

</LinearLayout>