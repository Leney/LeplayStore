    <ImageView
        android:id="@+id/main_titile_download_cheats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/download_cheats" />
    <!-- 右边下载按钮部分 -->

    <FrameLayout
        android:id="@+id/main_titile_download_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/main_titile_download_cheats" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/main_title_download_icon" />

        <TextView
            android:id="@+id/main_title_download_num"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="end|top"
            android:background="@drawable/circle_red_bg_shape"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </FrameLayout>

    <!-- 中间搜索框 -->

    <LinearLayout
        android:id="@+id/main_title_search_edit_lay"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.3dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@id/main_titile_user_icon_lay"
        android:layout_toLeftOf="@id/main_titile_download_btn"
        android:layout_toRightOf="@id/main_titile_user_icon_lay"
        android:layout_toStartOf="@id/main_titile_download_btn"
        android:background="@drawable/main_search_bg_shape"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6.6dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/main_title_search_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_title_hint"
            android:textColor="@color/tab_text_color" />
    </LinearLayout>

</RelativeLayout>