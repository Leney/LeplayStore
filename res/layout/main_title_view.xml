    <FrameLayout
        android:id="@+id/main_titile_user_icon_lay"
        android:layout_width="36.3dp"
        android:layout_height="36.3dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" >

        <!-- 左边头像 -->

        <com.xd.leplay.store.view.CustomImageView
            android:id="@+id/main_titile_user_icon"
            android:layout_width="33.3dp"
            android:layout_height="33.3dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_icon_default"
            leplay:type="circle" />

        <!-- 有更新的指示红点 -->

        <View
            android:id="@+id/main_title_red_proint"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/circle_red_bg_shape" />
    </FrameLayout>
