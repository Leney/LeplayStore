<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sign_success_top_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_dialog_top_bg"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="100"
        android:textColor="@color/dialog_coin_color"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/red_dialog_bottom_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="13.3dp"
            android:paddingRight="13.3dp"
            android:text="签到成功"
            android:textColor="@color/white"
            android:textSize="21.3dp" />

        <TextView
            android:id="@+id/sign_success_content_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="13.3dp"
            android:paddingRight="13.3dp"
            android:text="恭喜获得 10 金币"
            android:textColor="@color/white"
            android:textSize="21.3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_half_bg_shape"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="13.3dp"
            android:paddingRight="13.3dp"
            android:paddingTop="13.3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/sign_success_bottom_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您当前累计 1850 金币"
                    android:textColor="@color/dialog_coin_bottom_text_color"
                    android:textSize="14.6sp" />

                <TextView
                    android:id="@+id/sign_success_bottom_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( =18.5元 )"
                    android:textColor="@color/dialog_coin_bottom_text_color"
                    android:textSize="14.6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/sign_success_bottom_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再连续签到 3 天，"
                    android:textColor="@color/dialog_coin_bottom_text_color"
                    android:textSize="14.6sp" />

                <TextView
                    android:id="@+id/sign_success_bottom_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="额外奖励 50 金币"
                    android:textColor="@color/dialog_coin_bottom_text_color"
                    android:textSize="14.6sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>