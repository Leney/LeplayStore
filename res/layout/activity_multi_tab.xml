<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题部分 -->

    <com.xd.leplay.store.view.ChildTitleView
        android:id="@+id/base_tab_activity_title_view"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
    
    <com.xd.leplay.store.widget.SlidingTabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomBackground="@android:color/white"
        app:dividerColor="@color/main_tab_bg_color"
        app:nomalTextColor="@color/indicator_normal_text_color"
        app:selectedTextColor="@color/indicator_select_text_color"
        app:titleTextSize="16sp" />

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/divider_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>

</LinearLayout>